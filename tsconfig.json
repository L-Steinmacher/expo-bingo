{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "es2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "/src",
        "paths": {
            "~/*": ["app/*"],
            "@/*": ["./*"]
        }
    },
    "include": ["**/*.ts", "**/*.tsx"]
}
